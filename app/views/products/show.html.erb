<div class="row">
<div class="col-6">
  <strong>Sku:</strong>
  <%= @product.sku %>
</div>

<div class="col-6">
  <strong>Title:</strong>
  <%= @product.title %>
</div>

<div class="col-6">
  <strong>Desc:</strong>
  <%= @product.desc %>
</div>

<div class="col-6">
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</div>

<div class="col-6">
  <strong>Costprice:</strong>
  <%= @product.costprice %>
</div>

<div class="col-6">
  <strong>Price:</strong>
  <%= @product.price %>
</div>
<div class="col-10 mt-4">
  <div class="table-responsive">
    <table class="table table-primary">
      <thead>
        <tr>
          <th scope="col">Sku</th>
          <th scope="col">Title</th>
          <th scope="col">Desc</th>
          <th scope="col">Картинки</th>
        </tr>
      </thead>
      <tbody>
      <% @product.variants.each do |variant|%>
        <tr class="">
          <td scope="row"><%= variant.sku%></td>
          <td><%= variant.title%></td>
          <td><%= variant.desc%></td>
          <td> 
          <%= form_tag create_images_variants_path(variant), method: :post do %>
            <label>Color</label>
            <%= select_tag "background", options_for_select(Product::ImageBackground) %>
            <label>Size</label>
            <%= select_tag "size", options_for_select(Product::ImageSize) %>
            <%= submit_tag "Create image", class: "btn btn-primary" %>
          <% end %>
           <%= render '/layouts/image_form', :f => variant %>
        </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>

</div>

<div class="row">
<div class="col-2 btn-group mt-5">
<%= link_to 'Edit', edit_product_path(@product) , class: 'btn btn-success' %>
<%= link_to 'Back', products_path, class: 'btn btn-outline-primary' %>
</div>
</div>
