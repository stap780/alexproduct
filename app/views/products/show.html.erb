<div class="row">
<div class="col-6">
<p><strong>Sku:</strong> <%= @product.sku %></p>
<p><strong>Title:</strong> <%= @product.title %></p>
<p><strong>Desc:</strong> <%= @product.desc %></p>
<p><strong>Quantity:</strong> <%= @product.quantity %></p>
<p><strong>Costprice:</strong> <%= @product.costprice %></p>
<p><strong>Price:</strong> <%= @product.price %></p>
</div>
<div class="col-6">
  <%= render '/layouts/image_form', f: @product, size: '200x200', col: "col-4" %>
</div>

<div class="col-12 mt-4">
<div class="col-6 mb-2 h4">Варианты</div>
  <div class="table-responsive">
    <table class="table table-primary">
      <thead>
        <tr>
          <th >Id</th>
          <th >Sku</th>
          <th >Название</th>
          <th >Описание</th>
          <th ></th>
          <th >Картинки</th>
        </tr>
      </thead>
      <tbody>
      <% @product.variants.each do |variant|%>
        <tr>
          <td style="max-width:30px;"><%= variant.id%></td>
          <td><%= variant.sku%></td>
          <td><%= variant.title%></td>
          <td><%= variant.desc%></td>
          <td style="max-width:170px;"> 
          <%= form_tag create_images_variants_path(variant), method: :post do %>
            <p><label>Color</label>
            <%= select_tag "background", options_for_select(Product::ImageBackground) %>
            <label>Size</label>
            <%= select_tag "size", options_for_select(Product::ImageSize) %></p>
            <p><%= submit_tag "Create image", class: "btn btn-primary btn-sm" %></p>
          <% end %>
          </td>
           <td class="pt-0 px-0"><%= render '/layouts/image_form', f: variant , size: '150x150', col: "col-3"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>

</div>

<div class="row">
<div class="col-2 btn-group mt-5">
<%= link_to 'Редактировать', edit_product_path(@product) , class: 'btn btn-success' %>
<%= link_to 'Назад', products_path, class: 'btn btn-outline-primary' %>
</div>
</div>
