<div class="row justify-content-center align-content-center mb-3 mt-3">
<div class="col-2">
  <div class="h3 col-md-12 p-0">Товары</div>
  <div class="col-md-12 p-0"><small>Всего - <%= Product.count %></small></div>
</div>
<div class="col-2 p-0">
  <div class="btn-group" role="group">
    <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle btn-sm" data-bs-toggle="dropdown">Действия</button>
    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
      <%= link_to 'Создать', new_product_path, class: 'dropdown-item' %>
      <%= link_to 'Импорт', import_products_path, class: 'dropdown-item' %>
    </div>
  </div>
</div>
  <%= search_form_for @search, {class: 'form-inline col-7 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
            <%= f.search_field :sku_eq , placeholder: 'sku', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :title_eq , placeholder: 'title', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :desc_eq , placeholder: 'desc', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :quantity_eq , placeholder: 'quantity', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :costprice_eq , placeholder: 'costprice', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :price_eq , placeholder: 'price', class: "form-control", style: "max-width: 180px;" %>
            <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, products_path, class: 'btn btn-outline-dark ' %>
      <%= link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_products_path, class: 'btn btn-secondary', id: 'deleteAll', remote: true %>
    </div>
  <% end %>
</div>
</div>

<div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
  <table class="table table-hover table-condensed">
  <thead>
    <tr class="text-secondary">
      <th><%= check_box_tag 'selectAll', 'selectAll'%></th>
      <th></th>
      <th>Sku</th>
      <th>Barcode</th>
      <th>Title</th>
      <th>Desc</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="items_table" class="border-0">
    <% @products.each do |product| %>
      <tr>
        <td><%= check_box_tag "product_ids[]", product.id %></td>
        <td><%= image_tag product.images.first.variant(resize: "100x100"), class: "img-thumbnail" if product.images.present? %></td>
        <td><%= product.sku %></td>
        <td><%= product.barcode %></td>
        <td><%= product.title %></td>
        <td><%= product.desc %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to '<span class="oi oi-eye"></span>'.html_safe, product %></td>
        <td><%= link_to '<span class="oi oi-pencil"></span>'.html_safe, edit_product_path(product) %></td>
        <td><%= link_to '<span class="oi oi-trash"></span>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="apple_pagination">
<%= will_paginate @products %>
</div>
