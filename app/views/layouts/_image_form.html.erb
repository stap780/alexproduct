<% if !f.new_record? && f.images.present? %>
<div class="row" <%= f %> >
  <% f.images.each do |image| %>
  <div class="<%= col %> row align-items-center mt-1 image-item">
    <a class="img-thumbnail" data-image="<%= image.metadata %>" href="<%= url_for(image)%>" target="_blank">
      <%= image_tag image.variant(resize: size) %>
    </a>
    <div class="col-12 text-center">
    <%= link_to '<span class="oi oi-trash"></span>'.html_safe, delete_image_products_path(f.id, image.id), method: :delete, class: "btn btn-success delete-image btn-sm mt-1", data: {confirm: "Are you sure?"}, remote: true %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
