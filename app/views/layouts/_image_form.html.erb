<% if !f.new_record? && f.images.present? %>
<div class="image-table row mt-3" <%= f %> >
  <% f.images.each do |image| %>
  <div class="col-4 row align-items-center mt-1 image-item">
    <a class="col-" data-image="<%= image.metadata %>" href="<%= url_for(image)%>" target="_blank">
      <%= image_tag image.variant(resize: "200x200") %>
    </a>
    <div class="col-">
    <%= link_to '<span class="oi oi-trash"></span>'.html_safe, delete_image_products_path(f.id, image.id), method: :delete, class: "btn btn-success delete-image", data: {confirm: "Are you sure?"}, remote: true %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
